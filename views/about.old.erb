  <body>
    <div id="container">
      <h1>pincodr</h1>
      <h2>web service for indian pincodes</h2>

      <p>Pincodr exposes following JSON web services </p>
      <ul>
        <li>
          <h3>GET /pin/:pin - search by pincode</h3>
          <pre>

GET http://pincodr.abhinav.co/pin/462001
[{
    "pin": {
        "code": "462004",
        "district": "Bhopal",
        "id": 285347,
        "name": "M.P. Vidhan Sabha",
        "state": "Madhya Pradesh",
        "tehsil": "Bhopal"
    }
}, {
    "pin": {
        "code": "462004",
        "district": "Bhopal",
        "id": 285396,
        "name": "Vallabh Bhawan",
        "state": "Madhya Pradesh",
        "tehsil": "Bhopal"
    }
}]
          </pre>
        </li>

        <li>
          <h3>GET /area/:area - search by area</h3>
          <pre>

GET http://pincodr.abhinav.co/area/pilani
[{
    "pin": {
        "code": "333031",
        "district": "Jhujhunu",
        "id": 280101,
        "name": "Pilani",
        "state": "Rajasthan",
        "tehsil": "Chirawa"
    }
}]
          </pre>
        </li>

        <li>
          <h3>GET /tehsil/:tehsil &amp; GET /taluk/:taluk - search by tehsil/taluk</h3>
          <pre>

GET http://pincodr.abhinav.co/tehsil/narsinghgarh
[{
    "pin": {
        "code": "465669",
        "district": "Rajgarh",
        "id": 289612,
        "name": "Kotra",
        "state": "Madhya Pradesh",
        "tehsil": "Narsinghgarh"
    }
}, {
    "pin": {
        "code": "465669",
        "district": "Rajgarh",
        "id": 289618,
        "name": "Sonkatch",
        "state": "Madhya Pradesh",
        "tehsil": "Narsinghgarh"
    }
}]
          </pre>
        </li>

        <li>
          <h3>GET /district/:district - search by district</h3>
          <pre>

GET http://pincodr.abhinav.co/district/vidisha
[{
    "pin": {
        "code": "464228",
        "district": "Vidisha",
        "id": 292512,
        "name": "Sironj",
        "state": "Madhya Pradesh",
        "tehsil": "Vidisha"
    }
}, {
    "pin": {
        "code": "464001",
        "district": "Vidisha",
        "id": 292513,
        "name": "Vidisha",
        "state": "Madhya Pradesh",
        "tehsil": "Vidisha"
    }
}]
          </pre>
        </li>

        <li>
          <h3>GET /search/:value - code or name starts with value </h3>
          <pre>

GET http://pincodr.abhinav.co/search/1220
[{
    "pin": {
        "code": "122004",
        "district": "Gurgaon",
        "id": 247839,
        "name": "Sikanderpur",
        "state": "Haryana",
        "tehsil": "."
    }
}, {
    "pin": {
        "code": "122001",
        "district": "Gurgaon",
        "id": 247844,
        "name": "South City I",
        "state": "Haryana",
        "tehsil": "."
    }
}]
          </pre>
        </li>
